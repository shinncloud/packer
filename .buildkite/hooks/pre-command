set -euo pipefail
echo '--- :sparkles: Exporting secrets'

source bin/keys

export PATH="${PATH}:/snap/bin"
export BUILDKITE_KEY="$(echo -n "$BUILDKITE_KEY_ENC" | base64 --decode | gcloud kms decrypt --plaintext-file=- --ciphertext-file=- --location=global --keyring=packer --key=buildkite)"

for key in ${PACKER_KEYS[*]}; do
  gcloud kms decrypt --ciphertext-file="${key}.enc" --plaintext-file="$key" --location=global --keyring=packer --key=buildkite
done
