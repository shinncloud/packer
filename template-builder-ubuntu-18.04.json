{
  "variables": {
    "buildkite_token": "",
    "buildkite_version": "3.13.0-3059",
    "project_id": "shinncloud",
    "version": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "ssh_username": "root",
      "zone": "us-central1-a",
      "image_name": "{{user `version` | clean_image_name}}",
      "metadata": {
        "enable-oslogin": "FALSE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "config/goss.service",
      "destination": "/etc/systemd/system/goss.service"
    },
    {
      "type": "file",
      "source": "config/goss.yaml",
      "destination": "/etc/goss.yaml"
    },
    {
      "type": "shell",
      "environment_vars": [
        "AGENT_TOKEN={{user `buildkite_token`}}",
        "AGENT_VERSION={{user `buildkite_version`}}"
      ],
      "scripts": [
          "scripts/common.sh",
          "scripts/docker.sh",
          "scripts/buildkite.sh",
          "scripts/goss.sh"
        ]
    }
  ]
}
