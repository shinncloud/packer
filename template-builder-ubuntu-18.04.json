{
  "variables": {
    "buildkite_token": "",
    "buildkite_version": "3.14.0-3142",
    "project_id": "shinncloud",
    "version": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "ssh_username": "root",
      "zone": "us-central1-a",
      "image_name": "{{user `version` | clean_image_name}}",
      "metadata": {
        "enable-oslogin": "FALSE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "file",
      "source": "config/goss.service",
      "destination": "/etc/systemd/system/goss.service"
    },
    {
      "type": "file",
      "source": "config/goss.yaml",
      "destination": "/etc/goss.yaml"
    },
    {
      "type": "file",
      "source": "keys/buildkite-packer",
      "destination": "/tmp/buildkite-packer"
    },
    {
      "type": "file",
      "source": "config/ssh_config",
      "destination": "/tmp/ssh_config"
    },
    {
      "type": "shell",
      "environment_vars": [
        "AGENT_TOKEN={{user `buildkite_token`}}",
        "AGENT_VERSION={{user `buildkite_version`}}",
        "AGENT_TAGS=image={{user `version`}}"
      ],
      "scripts": [
          "scripts/common.sh",
          "scripts/docker.sh",
          "scripts/buildkite.sh",
          "scripts/goss.sh"
        ]
    }
  ]
}
